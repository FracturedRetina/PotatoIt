{
	"manifest_version": 2,

	"name": "Potato It!",
	"description": "Image from HowBigIsMyPotato.com",
	"version": "1.2",

	"browser_action": {
		"default_name": "Potato It!",
		"default_icon": "res/icon-pxl-light.png"
	},

	"web_accessible_resources": [
		"res/potato.png"
	],

	"content_scripts": [{
		"matches":["<all_urls>"],
		"js":["jquery.min.js", "contentScript.js"]
	}],

	"permissions": [
		"tabs", "storage"
	]
}